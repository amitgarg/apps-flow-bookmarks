{
  "name": "tmp-flowwise-bookmarks",
  "version": "1.0.0",
  "description": "vscode extension to create app specific bookmarks for tmp",
  "main": "extension.js",
  "engines": {
    "vscode": "^1.74.0"
  },
  "publisher": "amitkumargarg",
  "activationEvents": [
    "onCommand:tmp.bookmarks.loadFromApp",
    "onCommand:tmp.bookmarks.initializeForApp",
    "onCommand:tmp.bookmarks.searchFlowsAcross"
  ],
  "contributes": {
    "commands": [
      {
        "command": "tmp.bookmarks.loadFromApp",
        "title": "Load Bookmarks from an App",
        "category": "TMP"
      },
      {
        "command": "tmp.bookmarks.initializeForApp",
        "title": "Initialize Bookmarks for an App",
        "category": "TMP"
      },
      {
        "command": "tmp.bookmarks.saveForApp",
        "title": "Save Bookmarks for App",
        "category": "TMP"
      },
      {
        "command": "tmp.bookmarks.searchFlowsAcross",
        "title": "Search Flows Across Apps with keywords",
        "category": "TMP"
      },
      {
        "command": "tmp.bookmarks.openFileToLine",
        "title": "Open File to Line",
        "icon": "${symbol-class}"
      },
      {
        "command": "tmp.bookmarks.openFlow",
        "title": "Render Flow",
        "icon": "$(symbol-class)"
      },
      {
        "command": "tmp.bookmarks.diagram",
        "title": "Export Diagram",
        "icon": "$(preview)"
      },
      {
        "command": "tmp.bookmarks.copyAppFlow",
        "title": "Copy Json Snippet",
        "icon": "$(json)"
      },
      {
        "command": "tmp.bookmarks.removeFilter",
        "title": "Disable Filter",
        "icon": "$(search-stop)"
      },
      {
        "command": "tmp.bookmarks.searchFlows",
        "title": "Filter",
        "icon": "$(search)"
      },
      {
        "command": "tmp.bookmarks.reloadFromApp",
        "title": "Reload Bookmarks from current App",
        "icon": "$(refresh)"
      }
    ],
    "views": {
      "MCB-explorer": [
        {
          "id": "allFlows",
          "name": "All Flows",
          "icon": "images/fb-bookmark.svg"
        },
        {
          "id": "flowBookmarks",
          "name": "Flow Bookmarks",
          "icon": "images/fb-bookmark.svg"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "tmp.bookmarks.reloadFromApp",
          "when": "false"
        },
        {
          "command": "tmp.bookmarks.openFileToLine",
          "when": "false"
        },
        {
          "command": "tmp.bookmarks.searchFlows",
          "when": "false"
        },
        {
          "command": "tmp.bookmarks.openFlow",
          "when": "false"
        },
        {
          "command": "tmp.bookmarks.diagram",
          "when": "false"
        },
        {
          "command": "tmp.bookmarks.copyAppFlow",
          "when": "false"
        },
        {
          "command": "tmp.bookmarks.removeFilter",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "tmp.bookmarks.removeFilter",
          "when": "view == allFlows && filterAllBookmarks == true",
          "showOn": "always",
          "group": "navigation",
          "order": 1
        },
        {
          "command": "tmp.bookmarks.searchFlows",
          "when": "view == allFlows && appLoaded == true",
          "showOn": "always",
          "group": "navigation",
          "order": 2
        },
        {
          "command": "tmp.bookmarks.reloadFromApp",
          "when": "view == allFlows && appLoaded == true",
          "showOn": "always",
          "group": "navigation",
          "order": 3
        }
      ],
      "view/item/context": [
        {
          "command": "tmp.bookmarks.openFileToLine",
          "group": "navigation",
          "when": "view == flowBookmarks && viewItem == bookmark"
        },
        {
          "command": "tmp.bookmarks.openFlow",
          "group": "inline",
          "when": "view == allFlows && viewItem =~ /show/"
        },
        {
          "command": "tmp.bookmarks.diagram",
          "group": "inline",
          "when": "view == allFlows && viewItem =~ /diagram/"
        },
        {
          "command": "tmp.bookmarks.copyAppFlow",
          "group": "inline",
          "when": "view == allFlows && viewItem =~ /copyJson/"
        }
      ]
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amitgarg/tmp-flowwise-bookmarks.git"
  },
  "keywords": [
    "tmp",
    "flowwise",
    "bookmarks",
    "diagram"
  ],
  "categories": [
    "Extension Packs"
  ],
  "extensionDependencies": [
    "DeepakPahawa.flowbookmark"
  ],
  "author": "Amit Kumar Garg",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/amitgarg/tmp-flowwise-bookmarks/issues"
  },
  "homepage": "https://github.com/amitgarg/tmp-flowwise-bookmarks#readme"
}
